<div>
  <h2>User Info</h2>
  <%= image_tag user.get_profile_image(100,100) %>

  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>introdaction</th>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="row">
  <%= link_to  edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fa-solid fa-user-cog">プロフィール編集</i>
  <% end %>
</div>
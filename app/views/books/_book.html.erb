<%= form_with model: Book do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :opinion %><br>
    <%= form.text_area :body %>
  </div>

  <div class="form-group">
    <%= form.submit 'Create Book', class: "btn btn-success" %>
  </div>
<% end %>